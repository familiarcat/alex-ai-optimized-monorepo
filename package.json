{
  "name": "alex-ai-optimized-monorepo",
  "version": "1.0.0",
  "description": "Alex AI Optimized Monorepo with Turborepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "crew/*"
  ],
  "devDependencies": {
    "@types/puppeteer": "^7.0.4",
    "puppeteer": "^24.19.0",
    "turbo": "^1.10.0"
  },
  "packageManager": "pnpm@8.0.0",
  "scripts": {
    "monitor": "node scripts/testing/general/consolidated_general.py",
    "perf": "turbo run build --dry-run --graph",
    "load-creds": "./scripts/deployment/general/consolidated_general.py",
    "dev": "pnpm run load-creds && turbo run dev",
    "build": "pnpm run load-creds && turbo run build",
    "test": "pnpm run load-creds && turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "deploy": "pnpm run load-creds && turbo run deploy",
    "alex-ai:init": "pnpm run load-creds && node -e \"const { initializeAlexAI } = require('@alex-ai/core'); initializeAlexAI().then(() => console.log('Alex AI initialized'));\"",
    "alex-ai:status": "node -e \"const { getAlexAIStatus } = require('@alex-ai/core'); getAlexAIStatus().then(console.log);\"",
    "alex-ai:test": "node -e \"const { getAlexAI } = require('@alex-ai/core'); getAlexAI().runTests().then(console.log);\"",
    "milestone": "./scripts/deployment/milestone_management/consolidated_milestone_management.py",
    "milestone:safe": "./scripts/testing/milestone_management/consolidated_milestone_management.py",
    "quick-milestone": "./scripts/deployment/milestone_management/consolidated_milestone_management.py",
    "validate-creds": "./scripts/testing/general/consolidated_general.py",
    "security:audit": "./scripts/deployment/general/consolidated_general.py",
    "security:check": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "security:update": "npm update && npm audit fix"
  }
}